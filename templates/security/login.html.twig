{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block main %}
    <div class="title__container">
        <h1>{{ titleH1 | upper }}</h1>
        <p class="title__message">Connectez-vous afin de pouvoir faire vos achats en toute discrétion.</p>
    </div>

    <section class="form__container">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <form method="post">
                
            <div class="form-group">
                <label for="inputEmail">E-mail de connexion :</label>
                <input 
                    id="inputEmail" 
                    type="email" 
                    name="email" 
                    placeholder="Inscrivez votre e-mail ici..."
                    value="{{ last_username }}" 
                    autocomplete="email"
                    required autofocus
                >
            </div> 

            <div class="form-group">
                <label for="inputPassword">Mot de passe :</label>
                <input 
                    id="inputPassword"
                    type="password"
                    name="password"
                    placeholder="Inscrivez votre mot de passe ici..." 
                    autocomplete="current-password"
                    required
                >
            </div> 

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="checkbox mb-3">
                <label for="remember">Se souvenir de moi</label>
                <input type="checkbox" id="remember" name="_remember_me"> 
            </div>

            <button class="btn btn-primary" type="submit">
                SE CONNECTER
            </button>

            <a class="ForgotPassword" href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>         
        </form>
    </section> <!-- end form-container -->
{% endblock %}

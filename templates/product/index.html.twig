{% extends 'base.html.twig' %}

{% block main %}
    <div class="title__container">
        <h1>{{ titleH1 | upper }}</h1>
        <p class="title__message">Découvrez votre produit</p>
    </div>
    <section class="contentWrapper">
        <div class="imageWrapper">
            <img src="{{ asset ('images/thumbnails') }}/{{product.thumbnail}}" alt="image product" >
            </div>
            <div class="productDescription">
            <div class="title">
            {{ product.title}}
            </div>
            <div class="lessspace"> </div>
            <div class="subtitle">
            {{ product.subtitle}}
            </div>
            <div class="space"> </div>
            <div class="price">
            {{ (product.price / 100) |number_format(2, ',', '.') }} €
            </div>
            <div class="space"> </div>
            Quatité restante : {{ product.quantity }}
            <div class="space"> </div>
            Note :
            <div class="note"> 
            ⭐⭐⭐⭐⭐
            </div>
        </div>
    </section>

    <div class="space">
    <b>Description du produit</b>
    <div class="space">

    <div class="description">
    {{ product.description|striptags }}
    </div>
    <div class="space">
    <a href="{{ path('app_add_to_cart',{'id': product.id}) }}" class="btn btn-primary margin">
    <i class="fa-solid fa-cart-plus"></i>
    </a>
{% endblock main %}



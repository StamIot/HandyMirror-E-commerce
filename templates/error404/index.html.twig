{% extends 'base.html.twig' %}

{% block title %}Page non trouvé{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('error404') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('error404') }}
{% endblock %}

{% block main %}
    <div class="title__container">
        <h1>{{ titleH1 | upper }}</h1>
        <p class="title__message">Désolé ce produit n'existe pas</p>
    </div>
    <section class="error__container">
        <h2>Cette action n'est pas autorisée</h2>
        <a href="{{ path('app_products_list') }}">Retour sur la page des produits</a>
    </section>
{% endblock %}
